<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.example.minidouyin.VideoPlayer.VideoPlayer
		android:id="@+id/rv_video_gsyPlayer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerInParent="true" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="40dp"
		android:orientation="vertical"
		android:layout_gravity="right|bottom">

		<com.sackcentury.shinebuttonlib.ShineButton
			android:id="@+id/rv_video_btn_follow"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="end"
			android:layout_margin="5dp"
			android:src="@android:color/darker_gray"
			app:btn_color="@android:color/darker_gray"
			app:btn_fill_color="@android:color/holo_orange_light"
			app:allow_random_color="true"
			app:siShape="@raw/star"/>

		<com.sackcentury.shinebuttonlib.ShineButton
			android:id="@+id/rv_video_btn_like"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="end"
			android:layout_margin="5dp"
			android:src="@android:color/holo_red_light"
			app:btn_color="@android:color/holo_red_light"
			app:btn_fill_color="@android:color/holo_red_light"
			app:allow_random_color="true"
			app:siShape="@raw/heart"/>

		<TextView
			android:id="@+id/rv_video_hot_value"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:text="99.9"
			android:gravity="center"
			android:textSize="15sp"/>

		<com.sackcentury.shinebuttonlib.ShineButton
			android:id="@+id/rv_video_btn_share"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="end"
			android:layout_margin="5dp"
			android:src="@android:color/holo_blue_dark"
			app:btn_color="@android:color/holo_blue_dark"
			app:btn_fill_color="@android:color/holo_blue_dark"
			app:allow_random_color="true"
			app:siShape="@raw/share"/>

	</LinearLayout>

</FrameLayout>